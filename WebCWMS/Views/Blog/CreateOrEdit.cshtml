@model WebCWMS.Models.Blog
@{
	Layout = "~/Areas/Identity/Pages/Views/Shared/_LoginPartial.cshtml";
}
@{
	ViewData["Title"] = Model != null && Model.Id == 0 ? "Create Blog" : "Edit Blog";

}

<form method="post" action="CreateOrEdit" enctype="multipart/form-data">
	<div class="card">
		<div class="card-header bg-info">
			@ViewData["Title"]
		</div>
		<div class="card-body">
			<input type="hidden" asp-for="Id" />
			<div class="form-floating mb-2">
				<input asp-for="Date" class="form-control" />
				<label asp-for="Date"></label>
				<span asp-validation-for="Date" class="text-danger"></span>
			</div>

				<div class="form-floating mb-2">
					<input asp-for="Title" class="form-control" />
					<label asp-for="Title"></label>
					<span asp-validation-for="Title" class="text-danger"></span>
				</div>
		
				<div class="form-floating mb-2">
					<input asp-for="Description" class="form-control" />
					<label asp-for="Description"></label>
					<span asp-validation-for="Description" class="text-danger"></span>
				</div>

				<div class="form-group">
					<label asp-for="ImageFile" class="control-label"></label>
					<input asp-for="ImageFile" type="file" class="form-control" accept="image/*">
					<span asp-validation-for="ImageFile" class="text-danger"></span>
				</div>

		</div>
		@if (Model != null && Model.Id == 0)
		{
			<div class="col-lg-12 d-grid">
				<button type="submit" class="btn btn-primary">Submit</button>
			</div>

		}
		else
		{
			<div class="col-lg-12 d-grid">
				<button type="submit" class="btn btn-success">Update</button>
			</div>

		}

	</div>
</form>
@section Scripts{
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}